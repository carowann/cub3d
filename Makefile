MAKEFLAGS += --no-print-directory
#-I. is used to include the header files in the current directory


NAME		= cub3D
INC			= -I./libft -I./mini
CC 			= cc
CFLAGS		= -Wall -Werror -Wextra -g -I.
RM 			= rm -f
SRCS 		= cubed.c \
			  parser.c \

SRCS_OBJ	=	$(SRCS:.c=.o)

#	RULES	#

all: $(NAME)

$(NAME): $(SRCS)
		make -C libft
		make -C mini
		$(CC) $(CFLAGS) -Ilibft -Imini $(SRCS) -Lmini -lmlx_Linux -lXext -lX11 -lm -lz -Llibft -lft -o $(NAME) || { $(MAKE) err_art; exit 1; }
		@$(MAKE) text
		@$(MAKE) luna

clean:
		@$(MAKE) txtcln

fclean: clean
		$(RM) $(NAME)
		@$(MAKE) txtfcln

re: fclean all

.PHONY: all clean fclean re
.SILENT:


text:
	@echo -e '\033[1;95müåôIn the name of the moon, compile $(NAME) ‚ú®\033[0m'

txtcln:
	@echo -e '\033[1;94mPartially cleaned $(NAME)üßº \033[0m'

txtfcln:
	@echo -e '\033[1;91mFully cleaned $(NAME)üßΩ \033[0m'

