NAME		= cub3D

LIBFT_DIR = libft
LIBFT = $(LIBFT_DIR)/libft.a

MLX_DIR = minilibx-linux
MLX_LIBS = -L$(MLX_DIR) -lmlx -lXext -lX11 -lm
MLX_URL = https://github.com/42Paris/minilibx-linux.git

INCLUDES = -I./includes -I./$(LIBFT_DIR)

SRCS	= cubed.c \
	parser.c

CFLAGS = -g -Wall -Werror -Wextra

#	RULES	#

all: mlx_setup $(NAME)

mlx_setup: $(MLX_DIR)/libmlx.a

$(MLX_DIR)/libmlx.a:
	@if [ ! -d "$(MLX_DIR)" ]; then \
		echo "MiniLibX not found. Downloading..."; \
		git clone $(MLX_URL) $(MLX_DIR); \
		echo "MiniLibX downloaded successfully!"; \
	fi
	@echo "Building MiniLibX..."; \
	$(MAKE) -C $(MLX_DIR) --no-print-directory

$(LIBFT):
	@make --no-print-directory -C $(LIBFT_DIR)

$(NAME): $(LIBFT) $(SRCS)
	@cc $(SRCS) $(INCLUDES) $(CFLAGS) $(LIBFT) $(MLX_LIBS) -o $(NAME)
	@$(MAKE) luna

clean:
	@make --no-print-directory -C $(LIBFT_DIR) clean
	@$(MAKE) txtcln

fclean: clean
	@make --no-print-directory -C $(LIBFT_DIR) fclean
	@rm -f $(NAME)
	@$(MAKE) txtfcln

re: fclean all

.PHONY: all clean fclean re

text:
	@echo -e '\033[1;95müåôIn the name of the moon, compile $(NAME) ‚ú®\033[0m'

txtcln:
	@echo -e '\033[1;94mPartially cleaned $(NAME)üßº \033[0m'

txtfcln:
	@echo -e '\033[1;91mFully cleaned $(NAME)üßΩ \033[0m'

luna:
	@echo '‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚¢Ä‚£§‚£§‚£§‚£§‚£§‚£§‚£§‚£Ñ‚£Ä‚°Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä'
