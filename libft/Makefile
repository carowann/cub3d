#-I. is used to include the header files in the current directory

NAME		= libft.a
CC 			= cc
CFLAGS		= -Wall -Werror -Wextra -g -I.
RM 			= rm -f
LIBCMP		= ar -rcs
MNDT 		= ft_atoi.c ft_bzero.c ft_calloc.c ft_isalnum.c ft_isalpha.c \
			ft_isascii.c ft_isdigit.c ft_isprint.c ft_itoa.c ft_memchr.c \
			ft_memcmp.c ft_memcpy.c ft_memmove.c ft_memset.c \
			ft_putchar_fd.c ft_putendl_fd.c ft_putnbr_fd.c ft_putstr_fd.c \
			ft_split.c ft_strchr.c ft_strdup.c ft_striteri.c ft_strjoin.c \
			ft_strlcat.c ft_strlcpy.c ft_strlen.c ft_strmapi.c ft_strncmp.c \
			ft_strnstr.c ft_strrchr.c ft_strtrim.c ft_substr.c \
			ft_tolower.c ft_toupper.c \
			ft_putnbr_base_fd.c ft_put_ptr.c ft_printf.c\

			
MNDT_OBJ	=	$(MNDT:.c=.o)

#	RULES	#
%.o: %.c
		$(CC) $(CFLAGS) -c $< -o $@

all: $(NAME)

$(NAME): $(MNDT_OBJ)
		$(LIBCMP) $(NAME) $(MNDT_OBJ)
		@$(MAKE) text
		@$(MAKE) luna

clean:
		$(RM) $(MNDT_OBJ)
		@$(MAKE) txtcln

fclean: clean
		$(RM) $(NAME)
		@$(MAKE) txtfcln

re: fclean all

.PHONY: all clean fclean re
.SILENT: 

text:
	@echo -e '\033[1;95mðŸŒ™In the name of the moon, compile $(NAME) âœ¨\033[0m'

txtcln:
	@echo -e '\033[1;94mPartially cleaned $(NAME)ðŸ§¼ \033[0m'

txtfcln:
	@echo -e '\033[1;91mFully cleaned $(NAME)ðŸ§½ \033[0m'

